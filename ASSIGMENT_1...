CREATE TABLE EMPLOYEE__
(
EMP_ID INT PRIMARY KEY,
EMP_NAME VARCHAR(60) NOT NULL,
JOINING_YEAR INT,
BIRTHDAY VARCHAR(70) CHECK(BIRTHDAY <=2000),
DESIGNATION VARCHAR(70),
SALARY DOUBLE
);
DROP TABLE  EMPLOYEE;
-- ASSIGNMENT 1

CREATE TABLE STUDENT
(
ID INT PRIMARY KEY,
SNAME VARCHAR(60) NOT NULL,
AGE INT CHECK (AGE>5) ,
CLASS CHAR(4),
SECTION VARCHAR(50) NOT NULL
);

-- LIBRARY TABLE ....

CREATE TABLE LIBRARY
(
BOOKS_NO INT PRIMARY KEY ,
BOOKS_NAME VARCHAR(50) NOT NULL,
WHO_HIRED_ID INT,
FOREIGN KEY (WHO_HIRED_ID)REFERENCES  STUDENT(ID)
);

CREATE TABLE FEES
(
 Fee_ID INT PRIMARY KEY,
    STUDENT_ID INT,
    Amount DECIMAL(10, 2),
    Payment_Date DATE,
    Status VARCHAR(20),
    FOREIGN KEY (STUDENT_ID) REFERENCES STUDENT(ID)
    );
