create database programminghero;
use programminghero;

CREATE TABLE STUDENT
(
ROLL CHAR(4) PRIMARY KEY,
NAME VARCHAR(50),
MARKS DOUBLE
);
DROP TABLE STUDENT;
INSERT INTO STUDENT (ROLL,NAME, MARKS)
VALUES(1, 'MONALISA' ,88);
INSERT INTO STUDENT (ROLL,NAME, MARKS)
VALUES(2, 'MONA',89 );

SET SQL_SAFE_UPDATES = 0;
UPDATE  STUDENT 
SET NAME = 'RANA'
WHERE ROLL = 2;

DELETE  FROM STUDENT 
WHERE ROLL = 1;
SET SQL_SAFE_UPDATES = 1;

-- 2ND TABLE....
CREATE TABLE EMPLOYEE
(
EMP_ID INT PRIMARY KEY,
EMP_NAME VARCHAR(50),
EMP_SALARY DOUBLE,
JOINING_DATE DATE 
);
INSERT INTO EMPLOYEE (EMP_ID, EMP_NAME, EMP_SALARY, JOINING_DATE)
VALUES
(1, 'MONALISA', 1000, '1999-04-14'),
(2, 'RANA', 2000, '2000-10-01');

DELETE FROM EMPLOYEE
WHERE EMP_ID = 1;
